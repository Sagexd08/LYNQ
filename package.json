{
  "name": "lynq-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:apps": "turbo run dev --filter=@lynq/backend --filter=@lynq/frontend --filter=@lynq/admin",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "smoke": "turbo run smoke --filter=@lynq/contracts-evm --filter=@lynq/backend",
    "clean": "rimraf **/dist",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "turbo": "^2.1.1"
  },
  "dependencies": {
    "@chainlink/functions-toolkit": "^0.3.2"
  }
}