/**
 * Telegram Bot Configuration Template
 * Copy this to your .env file and update values as needed
 */

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================

# Telegram Bot Token (REQUIRED)
# Get your token from BotFather on Telegram: @BotFather
TELEGRAM_BOT_TOKEN=8081365044:AAHWyJWuvNGM2xn9MkgALiT35rJNSc17o8U

# Bot Mode
# Set to 'true' for development/testing (disables polling)
# Set to 'false' for production (enables polling)
TELEGRAM_TEST_MODE=false

# Polling Interval (in milliseconds, only when TEST_MODE=false)
TELEGRAM_POLLING_INTERVAL=300

# Admin User IDs (comma-separated)
# Users with these IDs can access /admin command
# Example: TELEGRAM_ADMIN_IDS=123456789,987654321,555666777
TELEGRAM_ADMIN_IDS=

# Webhook Configuration (optional, for production)
# Set these if using webhook instead of polling
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_PORT=3000
TELEGRAM_WEBHOOK_SECRET=

# ============================================================================
# BOT FEATURES
# ============================================================================

# Enable user notifications
TELEGRAM_NOTIFICATIONS_ENABLED=true

# Enable market updates
TELEGRAM_MARKET_UPDATES_ENABLED=true

# Enable repayment reminders
TELEGRAM_REMINDERS_ENABLED=true

# Enable risk alerts
TELEGRAM_ALERTS_ENABLED=true

# Enable AI assistant
TELEGRAM_AI_ASSISTANT_ENABLED=true

# Default user language
TELEGRAM_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
TELEGRAM_SUPPORTED_LANGUAGES=en,es,fr,de

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Repayment reminder days before due date
TELEGRAM_REMINDER_DAYS_BEFORE=7

# Maximum notifications per user per day
TELEGRAM_MAX_NOTIFICATIONS_PER_DAY=10

# Broadcast cooldown (minutes)
TELEGRAM_BROADCAST_COOLDOWN=60

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit: requests per minute per user
TELEGRAM_RATE_LIMIT_RPM=30

# Rate limit: requests per hour per user
TELEGRAM_RATE_LIMIT_RPH=500

# ============================================================================
# DATABASE INTEGRATION
# ============================================================================

# Database connection string for storing user profiles
TELEGRAM_DB_CONNECTION=mongodb://localhost:27017/lynq

# Database collection name for users
TELEGRAM_DB_USERS_COLLECTION=telegram_users

# Database collection name for sessions
TELEGRAM_DB_SESSIONS_COLLECTION=telegram_sessions

# Database collection name for messages
TELEGRAM_DB_MESSAGES_COLLECTION=telegram_messages

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level (debug, info, warn, error)
TELEGRAM_LOG_LEVEL=info

# Enable audit logging
TELEGRAM_AUDIT_LOGGING=true

# Log file location
TELEGRAM_LOG_FILE=logs/telegram-bot.log

# ============================================================================
# EXTERNAL SERVICES INTEGRATION
# ============================================================================

# Loan Service API endpoint
LOAN_SERVICE_URL=http://localhost:5000/api/v1/loans

# Flash Loan Service API endpoint
FLASH_LOAN_SERVICE_URL=http://localhost:5000/api/v1/flash-loans

# Risk Assessment Service endpoint
RISK_SERVICE_URL=http://localhost:5000/api/v1/ai

# AI Service endpoint
AI_SERVICE_URL=http://localhost:5000/api/v1/ai

# ============================================================================
# SECURITY
# ============================================================================

# API authentication token (for API endpoints)
TELEGRAM_API_TOKEN=your-secure-api-token-here

# Session expiration time (milliseconds)
TELEGRAM_SESSION_EXPIRY=1800000

# Enable CORS for bot endpoints
TELEGRAM_CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
TELEGRAM_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ============================================================================
# PERFORMANCE
# ============================================================================

# Connection pool size
TELEGRAM_CONNECTION_POOL_SIZE=10

# Cache TTL (milliseconds)
TELEGRAM_CACHE_TTL=300000

# Enable response caching
TELEGRAM_CACHE_ENABLED=true

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Node environment
NODE_ENV=development

# Server port (main Express server)
PORT=5000

# Server host
HOST=localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
