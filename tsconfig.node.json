{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "allowJs": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "vite.config.js",
    "tailwind.config.js", 
    "postcss.config.js",
    "eslint.config.js",
    "scripts/**/*"
  ]
}
