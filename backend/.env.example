# Environment Variables for LYNQ Backend
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lynq?schema=public

# Supabase (optional, if using Supabase features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Authentication
JWT_SECRET=your-jwt-secret-min-32-characters-long
JWT_EXPIRATION=24h

# ML Service
ML_SERVICE_URL=http://localhost:8000
ML_API_KEY=your-ml-api-key

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-chat-id
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# Redis
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
# BLOCKCHAIN_RPC_URL: Generic RPC endpoint used by the backend service for blockchain operations
# This is the primary RPC URL used by BlockchainService for connecting to the blockchain network
# Use this for the main network your application connects to (e.g., Mantle Sepolia for testnet)
BLOCKCHAIN_RPC_URL=https://rpc.sepolia.mantle.xyz

# Network-specific RPC URLs (used by Hardhat for contract deployment/testing)
# MANTLE_SEPOLIA_RPC_URL: Mantle Sepolia testnet RPC endpoint (used by Hardhat configs)
# This is specifically for Mantle Sepolia network (chainId: 5003) and is used during contract deployment
MANTLE_SEPOLIA_RPC_URL=https://rpc.sepolia.mantle.xyz

# BLOCKCHAIN_RPC_URL_POLYGON: Polygon Amoy testnet RPC endpoint (used by Hardhat configs)
# This is specifically for Polygon Amoy network (chainId: 80002) and is used during contract deployment
BLOCKCHAIN_RPC_URL_POLYGON=https://rpc-amoy.polygon.technology

# Blockchain Contract Addresses (optional, set after deployment)
PRIVATE_KEY=your-private-key-without-0x-prefix
LOAN_CORE_ADDRESS=0x...
COLLATERAL_VAULT_ADDRESS=0x...

# CORS (optional)
CORS_ORIGIN=http://localhost:5173
