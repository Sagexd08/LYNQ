# ==============================================
# LYNQ Backend Environment Configuration
# ==============================================

# Database (Supabase Postgres)
DATABASE_URL=postgresql://postgres:password@localhost:5432/lynq_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRATION=24h

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_API_KEY=your-ml-service-api-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# Redis Configuration (BullMQ)
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/your-api-key
BLOCKCHAIN_RPC_URL_POLYGON=https://polygon-amoy.infura.io/v3/your-api-key
PRIVATE_KEY=your-wallet-private-key
LOAN_CORE_ADDRESS=0x0000000000000000000000000000000000000000
COLLATERAL_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=LYNQ
API_VERSION=v1
