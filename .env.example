# ==============================================
# LYNQ Root Environment Configuration Example
# Copy this file to .env and fill in your credentials
# ==============================================

# ==============================================
# AWS Configuration
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id
AWS_IAM_ROLE=arn:aws:iam::YOUR_ACCOUNT_ID:role/lynq-ml-ec2-role

# ==============================================
# S3 Configuration (ML Models)
# ==============================================
S3_BUCKET=lynq-models
S3_KEY=models/credit_model_v1.pkl

# ==============================================
# Database Configuration (Supabase Postgres)
# ==============================================
DATABASE_URL=postgresql://user:password@host:5432/database
DIRECT_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==============================================
# ML Service Configuration
# ==============================================
MODEL_SOURCE=s3
LOCAL_MODEL_PATH=./models/credit_model.pkl
ML_SERVICE_URL=http://localhost:8000
ML_API_KEY=your-ml-service-api-key
ENABLE_SHAP=true
PRELOAD_MODEL=false

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRATION=24h

# ==============================================
# Telegram Bot Configuration
# ==============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# ==============================================
# Redis Configuration (BullMQ)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# Blockchain Configuration
# ==============================================
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/your-api-key
BLOCKCHAIN_RPC_URL_POLYGON=https://polygon-amoy.infura.io/v3/your-api-key
PRIVATE_KEY=your-wallet-private-key
LOAN_CORE_ADDRESS=0x0000000000000000000000000000000000000000
COLLATERAL_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
ETHERSCAN_API_KEY=your-etherscan-api-key

# ==============================================
# Application Configuration
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME=LYNQ
API_VERSION=v1
CORS_ORIGIN=*

# ==============================================
# ML Service Server Configuration
# ==============================================
HOST=0.0.0.0
ML_SERVICE_PORT=8000
DEBUG=false
LOG_LEVEL=INFO