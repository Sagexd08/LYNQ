{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@lynq/blockchain-adapter": ["packages/blockchain-adapter/src"],
      "@lynq/reputation-engine": ["packages/reputation-engine/src"],
      "@lynq/oracle-engine": ["packages/oracle-engine/src"],
      "@lynq/notifications": ["packages/notifications/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
