{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@lynq/blockchain-adapter": ["packages/blockchain-adapter/src"],
      "@lynq/reputation-engine": ["packages/reputation-engine/src"],
      "@lynq/oracle-engine": ["packages/oracle-engine/src"],
      "@lynq/notifications": ["packages/notifications/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
